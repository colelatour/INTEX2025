<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Milestones</title>
    <!-- Favicon-->
    <link rel="icon" type="image/x-icon" href="/assets/favicon.ico" />
    <!-- Bootstrap icons-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" rel="stylesheet"
        type="text/css" />
    <!-- Google fonts-->

    <!-- Core theme CSS (includes Bootstrap)-->
    <link href="/stylesheets/styles.css" rel="stylesheet" />
</head>

<body>
    <!-- Navigation-->
    <nav class="navbar navbar-light bg-light">
        <div class="container-fluid px-4">
            <a class="navbar-brand" href="/"><img src="/assets/img/EllaRises.png" alt="Ella Rises Logo"
                    style="height: 60px;"></a>
            <div>
                <% if (user) { %>
                    <span class="navbar-text me-3">Hi, <%= user.firstName ? user.firstName.charAt(0).toUpperCase() + user.firstName.slice(1) : '' %></span>
                    <a class="btn btn-no-background" href="/logout">Logout</a>
                <% } else { %>
                    <a class="btn btn-no-background" href="/login">Login</a>
                <% } %>
            </div>
        </div>
    </nav>
    <!-- Header-->
    <header class="bg-primary py-2 position-relative">
        <a href="/dashboard" class="back-arrow-link position-absolute"><i class="bi bi-chevron-left"></i></a>
        <div class="container px-4 px-lg-5 my-5">
            <div class="text-center">
                <h1 class="display-4 fw-bolder">Milestones</h1>
                <p class="lead fw-normal mb-0">Manage your milestones</p>
            </div>
        </div>
    </header>
    <!-- Section-->
    <section class="py-5">
        <div class="container px-4 px-lg-5 mt-5">
            <% if (user && user.role === 'manager') { %>
            <div class="d-flex justify-content-end mb-3">
                <a class="btn btn-custom-view" href="/milestones/add">Add New Milestone</a>
            </div>
            <% } %>
            <div class="table-responsive-scroll">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Milestone Title</th>
                            <th>Milestone Date</th>
                            <th>Participant Name</th>
                            <% if (user && user.role === 'manager') { %>
                            <th>Actions</th>
                            <% } %>
                        </tr>
                    </thead>
                    <tbody>
                        <% milestones.forEach(function(milestone) { %>
                            <tr>
                                <td>
                                    <%= milestone.title %>
                                </td>
                                <td>
                                    <%= milestone.milestoneDate ? new Date(milestone.milestoneDate).toLocaleDateString('en-US', { month: '2-digit', day: '2-digit', year: 'numeric' }).replace(/\//g, '-') : '' %>
                                </td>
                                <td>
                                    <%= milestone.participantfirstname %> <%= milestone.participantlastname %>
                                </td>
                                <% if (user && user.role === 'manager') { %>
                                <td class="text-center">
                                    <form action="/milestones/edit/<%= milestone.id %>" method="GET" class="d-inline">
                                        <button type="submit" class="btn btn-link p-0 me-2" aria-label="Edit Milestone">
                                            <i class="bi-pencil text-secondary"></i>
                                        </button>
                                    </form>
                                    <form action="/milestones/delete/<%= milestone.id %>" method="POST" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this milestone?');">
                                        <button type="submit" class="btn btn-link p-0" aria-label="Delete Milestone">
                                            <i class="bi-trash text-danger"></i>
                                        </button>
                                    </form>
                                </td>
                                <% } %>
                            </tr>
                            <% }); %>
                    </tbody>
                </table>
            </div>
            <% if (totalPages > 1) { %>
            <nav aria-label="Page navigation">
                <ul class="pagination justify-content-center">
                    <li class="page-item <%= currentPage === 1 ? 'disabled' : '' %>">
                        <a class="page-link" href="/milestones?page=<%= currentPage - 1 %>" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                        </a>
                    </li>
                    <li class="page-item disabled">
                        <span class="page-link">Page <%= currentPage %> of <%= totalPages %></span>
                    </li>
                    <li class="page-item <%= currentPage === totalPages ? 'disabled' : '' %>">
                        <a class="page-link" href="/milestones?page=<%= currentPage + 1 %>" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                        </a>
                    </li>
                </ul>
            </nav>
            <% } %>
        </div>
    </section>
    <!-- Bootstrap core JS-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Core theme JS-->
    <script src="/javascripts/scripts.js"></script>
</body>

</html>