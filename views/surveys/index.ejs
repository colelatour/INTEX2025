<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Surveys</title>
    <!-- Favicon-->
    <link rel="icon" type="image/x-icon" href="/assets/favicon.ico" />
    <!-- Bootstrap icons-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" rel="stylesheet"
        type="text/css" />
    <!-- Google fonts-->

    <!-- Core theme CSS (includes Bootstrap)-->
    <link href="/stylesheets/styles.css" rel="stylesheet" />
</head>

<body>
    <!-- Navigation-->
    <nav class="navbar navbar-light bg-light">
        <div class="container-fluid px-4">
            <a class="navbar-brand" href="/"><img src="/assets/img/EllaRises.png" alt="Ella Rises Logo"
                    style="height: 60px;"></a>
            <div>
                <% if (user) { %>
                    <span class="navbar-text me-3">Hi, <%= user.firstName ? user.firstName.charAt(0).toUpperCase() + user.firstName.slice(1) : '' %></span>
                    <a class="btn btn-no-background" href="/logout">Logout</a>
                <% } else { %>
                    <a class="btn btn-no-background" href="/login">Login</a>
                <% } %>
            </div>
        </div>
    </nav>
    <!-- Header-->
    <header class="bg-primary py-2 position-relative">
        <a href="/dashboard" class="back-arrow-link position-absolute"><i class="bi bi-chevron-left"></i></a>
        <div class="container px-4 px-lg-5 my-5">
            <div class="text-center">
                <h1 class="display-4 fw-bolder">Surveys</h1>
                <p class="lead fw-normal mb-0">Manage your surveys</p>
            </div>
        </div>
    </header>
    <!-- Section-->
    <section class="py-5">
        <div class="container px-4 px-lg-5 mt-5">
            <% if (typeof message !== 'undefined' && message) { %>
                <div class="alert alert-success" role="alert">
                    <%= message %>
                </div>
            <% } %>
            <div class="d-flex justify-content-between mb-3">
                <form action="/surveys" method="GET" class="d-flex">
                    <input class="form-control me-2" type="search" placeholder="Search by email or event" aria-label="Search" name="search" value="<%= searchTerm || '' %>" style="width: 20em;">
                    <button class="btn btn-custom-view" type="submit">Search</button>
                </form>
                <% if (user && user.role === 'manager') { %>
                    <a class="btn btn-custom-view" href="/surveys/add">Add New Survey</a>
                <% } %>
            </div>
            <div class="table-responsive-scroll">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Participant Email</th>
                            <th>Event Name</th>
                            <th>Event Date</th>
                            <th>Event Time Start</th>
                            <th>Satisfaction Score</th>
                            <th>Usefulness Score</th>
                            <th>Instructor Score</th>
                            <th>Recommendation Score</th>
                            <th>Overall Score</th>
                            <th>NPS Bucket</th>
                            <th>Comments</th>
                            <th>Submission Date</th>
                            <th>Submission Time</th>
                            <% if (user && user.role === 'manager') { %>
                            <th>Actions</th>
                            <% } %>
                        </tr>
                    </thead>
                    <tbody>
                        <% surveys.forEach(function(survey) { %>
                            <tr>
                                <td>
                                    <%= survey.participantEmail %>
                                </td>
                                <td>
                                    <%= survey.eventName %>
                                </td>
                                <td>
                                    <%= survey.eventDate ? new Date(survey.eventDate).toLocaleDateString('en-US', { month: '2-digit', day: '2-digit', year: 'numeric' }).replace(/\//g, '-') : '' %>
                                </td>
                                <td>
                                    <%= survey.eventTimeStart %>
                                </td>
                                <td>
                                    <%= survey.satisfactionScore %>
                                </td>
                                <td>
                                    <%= survey.usefulnessScore %>
                                </td>
                                <td>
                                    <%= survey.instructorScore %>
                                </td>
                                <td>
                                    <%= survey.recommendationScore %>
                                </td>
                                <td>
                                    <%= survey.overallScore %>
                                </td>
                                <td>
                                    <%= survey.npsBucket %>
                                </td>
                                <td>
                                    <% const truncatedComments = survey.comments && survey.comments.length > 50 ? survey.comments.substring(0, 50) + '...' : survey.comments; %>
                                    <%= truncatedComments %>
                                </td>
                                <td>
                                    <%= survey.submissionDate ? new Date(survey.submissionDate).toLocaleDateString('en-US', { month: '2-digit', day: '2-digit', year: 'numeric' }).replace(/\//g, '-') : '' %>
                                </td>
                                <td>
                                    <%= survey.submissionTime %>
                                </td>
                                <% if (user && user.role === 'manager') { %>
                                <td class="text-center">
                                    <form action="/surveys/view/<%= survey.id %>" method="GET" class="d-inline">
                                        <button type="submit" class="btn btn-link p-0 me-2" aria-label="View Survey">
                                            <i class="bi-eye text-info"></i>
                                        </button>
                                    </form>
                                    <form action="/surveys/edit/<%= survey.id %>" method="GET" class="d-inline">
                                        <button type="submit" class="btn btn-link p-0 me-2" aria-label="Edit Survey">
                                            <i class="bi-pencil text-secondary"></i>
                                        </button>
                                    </form>
                                    <form action="/surveys/delete/<%= survey.id %>" method="POST" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this survey?');">
                                        <button type="submit" class="btn btn-link p-0" aria-label="Delete Survey">
                                            <i class="bi-trash text-danger"></i>
                                        </button>
                                    </form>
                                </td>
                                <% } %>
                            </tr>
                            <% }); %>
                    </tbody>
                </table>
            </div>
            <nav aria-label="Page navigation" class="d-flex flex-column align-items-center">
                <ul class="pagination justify-content-center mb-3">
                    <li class="page-item <%= currentPage === 1 ? 'disabled' : '' %>">
                        <a class="page-link" href="/surveys?page=<%= currentPage - 1 %><%= searchTerm ? '&search=' + searchTerm : '' %>" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                        </a>
                    </li>
                    <li class="page-item disabled">
                        <span class="page-link">Page <%= currentPage %> of <%= totalPages %></span>
                    </li>
                    <li class="page-item <%= currentPage === totalPages ? 'disabled' : '' %>">
                        <a class="page-link" href="/surveys?page=<%= currentPage + 1 %><%= searchTerm ? '&search=' + searchTerm : '' %>" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                        </a>
                    </li>
                </ul>
                <div class="input-group mb-3" style="width: 200px;">
                    <input type="number" class="form-control" id="pageNumberInput" placeholder="Go to page" min="1" max="<%= totalPages %>" aria-label="Page number">
                    <button class="btn btn-outline-secondary" type="button" id="goToPageBtn">Go</button>
                </div>
            </nav>
        </div>
    </section>
    <!-- Bootstrap core JS-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Core theme JS-->
    <script src="/javascripts/scripts.js"></script>
</body>

</html>