<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Participants</title>
    <!-- Favicon-->
    <link rel="icon" type="image/x-icon" href="/assets/favicon.ico" />
    <!-- Bootstrap icons-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" rel="stylesheet"
        type="text/css" />
    <!-- Google fonts-->

    <!-- Core theme CSS (includes Bootstrap)-->
    <link href="/stylesheets/styles.css" rel="stylesheet" />
</head>

<body>
    <!-- Navigation-->
    <nav class="navbar navbar-light bg-light">
        <div class="container-fluid px-4">
            <a class="navbar-brand" href="/"><img src="/assets/img/EllaRises.png" alt="Ella Rises Logo"
                    style="height: 60px;"></a>
            <div>
                <% if (user) { %>
                    <span class="navbar-text me-3">Hi, <%= user.firstName ? user.firstName.charAt(0).toUpperCase() + user.firstName.slice(1) : '' %></span>
                    <a class="btn btn-no-background" href="/logout">Logout</a>
                <% } else { %>
                    <a class="btn btn-no-background" href="/login">Login</a>
                <% } %>
            </div>
        </div>
    </nav>
    <!-- Header-->
    <header class="bg-primary py-2 position-relative">
        <a href="/dashboard" class="back-arrow-link position-absolute"><i class="bi bi-chevron-left"></i></a>
        <div class="container px-4 px-lg-5 my-5">
            <div class="text-center">
                <h1 class="display-4 fw-bolder">Participants</h1>
                <p class="lead fw-normal mb-0">Manage your participants</p>
            </div>
        </div>
    </header>
    <!-- Section-->
    <section class="py-5">
        <div class="container px-4 px-lg-5 mt-5">
            <% if (user && user.role === 'manager') { %>
            <div class="d-flex justify-content-end mb-3">
                <a class="btn btn-custom-view" href="/participants/add">Add New Participant</a>
            </div>
            <% } %>
            <div class="table-responsive-scroll">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Email</th>
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>DOB</th>
                            <th>Phone</th>
                            <th>City</th>
                            <th>State</th>
                            <th>Zip</th>
                            <th>School/Employer</th>
                            <th>Field of Interest</th>
                            <th>Total Donations</th>
                            <% if (user && user.role === 'manager') { %>
                            <th>Actions</th>
                            <% } %>
                        </tr>
                    </thead>
                    <tbody>
                        <% participants.forEach(function(participant) { %>
                            <tr>
                                <td>
                                    <%= participant.email %>
                                </td>
                                <td>
                                    <%= participant.firstName %>
                                </td>
                                <td>
                                    <%= participant.lastName %>
                                </td>
                                <td>
                                    <%= participant.dob %>
                                </td>
                                <td>
                                    <%= participant.phone %>
                                </td>
                                <td>
                                    <%= participant.city %>
                                </td>
                                <td>
                                    <%= participant.state %>
                                </td>
                                <td>
                                    <%= participant.zip %>
                                </td>
                                <td>
                                    <%= participant.schoolEmployer %>
                                </td>
                                <td>
                                    <%= participant.fieldOfInterest %>
                                </td>
                                <td>
                                    <%= participant.totalDonations %>
                                </td>
                                <% if (user && user.role === 'manager') { %>
                                <td class="text-center">
                                    <form action="/participants/edit/<%= participant.id %>" method="GET" class="d-inline">
                                        <button type="submit" class="btn btn-link p-0 me-2" aria-label="Edit Participant">
                                            <i class="bi-pencil text-secondary"></i>
                                        </button>
                                    </form>
                                    <form action="/participants/delete/<%= participant.id %>" method="POST" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this participant?');">
                                        <button type="submit" class="btn btn-link p-0" aria-label="Delete Participant">
                                            <i class="bi-trash text-danger"></i>
                                        </button>
                                    </form>
                                </td>
                                <% } %>
                            </tr>
                            <% }); %>
                    </tbody>
                </table>
            </div>
        </div>
    </section>
    <!-- Bootstrap core JS-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Core theme JS-->
    <script src="/javascripts/scripts.js"></script>
</body>

</html>