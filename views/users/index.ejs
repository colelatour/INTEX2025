<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Users</title>
    <!-- Favicon-->
    <link rel="icon" type="image/x-icon" href="/assets/favicon.ico" />
    <!-- Bootstrap icons-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" rel="stylesheet"
        type="text/css" />
    <!-- Google fonts-->

    <!-- Core theme CSS (includes Bootstrap)-->
    <link href="/stylesheets/styles.css" rel="stylesheet" />
</head>

<body>
    <!-- Navigation-->
    <nav class="navbar navbar-light bg-light">
        <div class="container-fluid px-4">
            <a class="navbar-brand" href="/"><img src="/assets/img/EllaRises.png" alt="Ella Rises Logo"
                    style="height: 60px;"></a>
            <div>
                <% if (user) { %>
                    <span class="navbar-text me-3">Hi, <%= user.firstName ? user.firstName.charAt(0).toUpperCase() + user.firstName.slice(1) : '' %></span>
                    <a class="btn btn-no-background" href="/logout?redirect=/">Logout</a>
                <% } else { %>
                    <a class="btn btn-no-background" href="/login">Login</a>
                <% } %>
            </div>
        </div>
    </nav>
    <!-- Header-->
    <header class="bg-primary py-2 position-relative">
        <a href="/" class="back-arrow-link position-absolute"><i class="bi bi-chevron-left"></i></a>
        <div class="container px-4 px-lg-5 my-5">
            <div class="text-center">
                <h1 class="display-4 fw-bolder">Users</h1>
                <p class="lead fw-normal mb-0">Manage your users</p>
            </div>
        </div>
    </header>
    <!-- Section-->
    <section class="py-5">
        <div class="container px-4 px-lg-5 mt-5">
            <div class="d-flex justify-content-end mb-3">
                <a class="btn btn-custom-view" href="/users/add">Add New User</a>
            </div>
            <div class="table-responsive-scroll">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>Email</th>
                            <th>Role</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% users.forEach(function(user) { %>
                            <tr>
                                <td>
                                    <%= user.firstName ? user.firstName.charAt(0).toUpperCase() + user.firstName.slice(1) : '' %>
                                </td>
                                <td>
                                    <%= user.lastName ? user.lastName.charAt(0).toUpperCase() + user.lastName.slice(1) : '' %>
                                </td>
                                <td>
                                    <%= user.email %>
                                </td>
                                <td>
                                    <%= user.role %>
                                </td>
                                <td class="text-center">
                                    <a class="me-2" href="/users/edit/<%= user.id %>"><i
                                            class="bi-pencil text-secondary"></i></a>
                                    <a href="/users/delete/<%= user.id %>"><i class="bi-trash text-danger"></i></a>
                                </td>
                            </tr>
                            <% }); %>
                    </tbody>
                </table>
            </div>
        </div>
    </section>
    <!-- Bootstrap core JS-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Core theme JS-->
    <script src="/javascripts/scripts.js"></script>
</body>

</html>