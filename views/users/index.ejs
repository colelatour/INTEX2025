<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Users</title>
    <!-- Favicon-->
    <link rel="icon" type="image/x-icon" href="/assets/favicon.ico" />
    <!-- Bootstrap icons-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" rel="stylesheet"
        type="text/css" />
    <!-- Google fonts-->

    <!-- Core theme CSS (includes Bootstrap)-->
    <link href="/stylesheets/styles.css" rel="stylesheet" />
</head>

<body>
    <!-- Navigation-->
    <nav class="navbar navbar-light bg-light">
        <div class="container-fluid px-4">
            <a class="navbar-brand" href="/"><img src="/assets/img/EllaRises.png" alt="Ella Rises Logo"
                    style="height: 60px;"></a>
            <div>
                <% if (user) { %>
                    <span class="navbar-text me-3">Hi, <%= user.firstName ? user.firstName.charAt(0).toUpperCase() + user.firstName.slice(1) : '' %></span>
                    <a class="btn btn-no-background" href="/logout?redirect=/">Logout</a>
                <% } else { %>
                    <a class="btn btn-no-background" href="/login">Login</a>
                <% } %>
            </div>
        </div>
    </nav>
    <!-- Header-->
    <header class="bg-primary py-2 position-relative">
        <a href="/dashboard" class="back-arrow-link position-absolute"><i class="bi bi-chevron-left"></i></a>
        <div class="container px-4 px-lg-5 my-5">
            <div class="text-center">
                <h1 class="display-4 fw-bolder">Users</h1>
                <p class="lead fw-normal mb-0">Manage your users</p>
            </div>
        </div>
    </header>
    <!-- Section-->
    <section class="py-5">
        <div class="container px-4 px-lg-5 mt-5">
            <div class="d-flex justify-content-between mb-3">
                <form action="/users" method="GET" class="d-flex">
                    <input class="form-control me-2" type="search" placeholder="Search by name or email" aria-label="Search" name="search" value="<%= searchTerm || '' %>" style="width: 20em;">
                    <button class="btn btn-custom-view" type="submit">Search</button>
                </form>
                <a class="btn btn-custom-view" href="/users/add">Add New User</a>
            </div>
            <div class="table-responsive-scroll">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>Email</th>
                            <th>Role</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% users.forEach(function(user) { %>
                            <tr>
                                <td>
                                    <%= user.userfirstname ? user.userfirstname.charAt(0).toUpperCase() + user.userfirstname.slice(1) : '' %>
                                </td>
                                <td>
                                    <%= user.userlastname ? user.userlastname.charAt(0).toUpperCase() + user.userlastname.slice(1) : '' %>
                                </td>
                                <td>
                                    <%= user.useremail %>
                                </td>
                                <td>
                                    <%= user.userrole %>
                                </td>
                                <td class="text-center">
                                    <form action="/users/edit/<%= user.userid %>" method="GET" class="d-inline">
                                        <button type="submit" class="btn btn-link p-0 me-2" aria-label="Edit User">
                                            <i class="bi-pencil text-secondary"></i>
                                        </button>
                                    </form>
                                    <form action="/users/delete/<%= user.userid %>" method="POST" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this user?');">
                                        <button type="submit" class="btn btn-link p-0" aria-label="Delete User">
                                            <i class="bi-trash text-danger"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                            <% }); %>
                    </tbody>
                </table>
            </div>
            <% if (totalPages > 1) { %>
            <nav aria-label="Page navigation">
                <ul class="pagination justify-content-center">
                    <li class="page-item <%= currentPage === 1 ? 'disabled' : '' %>">
                        <a class="page-link" href="/users?page=<%= currentPage - 1 %>" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                        </a>
                    </li>
                    <li class="page-item disabled">
                        <span class="page-link">Page <%= currentPage %> of <%= totalPages %></span>
                    </li>
                    <li class="page-item <%= currentPage === totalPages ? 'disabled' : '' %>">
                        <a class="page-link" href="/users?page=<%= currentPage + 1 %>" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                        </a>
                    </li>
                </ul>
            </nav>
            <% } %>
        </div>
    </section>
    <!-- Bootstrap core JS-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Core theme JS-->
    <script src="/javascripts/scripts.js"></script>
</body>

</html>