<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Add Donation</title>
    <!-- Favicon-->
    <link rel="icon" type="image/x-icon" href="/assets/favicon.ico" />
    <!-- Bootstrap icons-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" rel="stylesheet"
        type="text/css" />
    <!-- Core theme CSS (includes Bootstrap)-->
    <link href="/stylesheets/styles.css" rel="stylesheet" />
</head>

<body>
    <!-- Navigation-->
    <nav class="navbar navbar-light bg-light">
        <div class="container-fluid px-4">
            <a class="navbar-brand" href="/"><img src="/assets/img/EllaRises.png" alt="Ella Rises Logo"
                    style="height: 60px;"></a>
            <div>
                <% if (user) { %>
                    <span class="navbar-text me-3">Hi, <%= user.firstName ? user.firstName.charAt(0).toUpperCase() + user.firstName.slice(1) : '' %></span>
                    <a class="btn btn-no-background" href="/logout">Logout</a>
                <% } else { %>
                    <a class="btn btn-no-background" href="/login">Login</a>
                <% } %>
            </div>
        </div>
    </nav>
    <!-- Header-->
    <header class="bg-primary py-2 position-relative">
        <a href="/donations" class="back-arrow-link position-absolute"><i class="bi bi-chevron-left"></i></a>
        <div class="container px-4 px-lg-5 my-5">
            <div class="text-center">
                <h1 class="display-4 fw-bolder">Add New Donation</h1>
            </div>
        </div>
    </header>
    <!-- Form Section-->
    <section class="py-5">
        <div class="container px-4 px-lg-5">
            <div class="row justify-content-center">
                <div class="col-lg-8 col-md-10">
                    <div class="card shadow-sm border-0">
                        <div class="card-body p-5">
                            <% if (typeof error !== 'undefined' && error) { %>
                                <div class="alert alert-danger" role="alert">
                                    <%= error %>
                                </div>
                            <% } %>
                            <form action="/donations/add" method="POST">
                                <div class="mb-3">
                                    <label for="participant_id" class="form-label">Participant</label>
                                    <select class="form-control" id="participant_id" name="participant_id" required>
                                        <% participants.forEach(p => { %>
                                            <option value="<%= p.participantid %>" <%= (typeof formData !== 'undefined' && formData.participant_id == p.participantid) ? 'selected' : '' %>>
                                                <%= p.participantfirstname %> <%= p.participantlastname %> (<%= p.participantemail %>)
                                            </option>
                                        <% }); %>
                                    </select>
                                </div>
                                <div class="mb-3">
                                    <label for="amount" class="form-label">Amount</label>
                                    <input type="number" step="0.01" class="form-control" id="amount" name="amount" value="<%= (typeof formData !== 'undefined' && formData.amount) ? formData.amount : '' %>" required>
                                </div>
                                <div class="mb-3">
                                    <label for="donation_date" class="form-label">Donation Date</label>
                                    <input type="date" class="form-control" id="donation_date" name="donation_date" value="<%= (typeof formData !== 'undefined' && formData.donation_date) ? formData.donation_date : new Date().toISOString().slice(0,10) %>">
                                </div>
                                <button type="submit" class="btn btn-no-background">Add Donation</button>
                                <a href="/donations" class="btn btn-no-background btn-cancel">Cancel</a>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Bootstrap core JS-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Core theme JS-->
    <script src="/javascripts/scripts.js"></script>
</body>

</html>