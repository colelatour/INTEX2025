<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Donations</title>
    <!-- Favicon-->
    <link rel="icon" type="image/x-icon" href="/assets/favicon.ico" />
    <!-- Bootstrap icons-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" rel="stylesheet"
        type="text/css" />
    <!-- Google fonts-->

    <!-- Core theme CSS (includes Bootstrap)-->
    <link href="/stylesheets/styles.css" rel="stylesheet" />
</head>

<body>
    <!-- Navigation-->
    <nav class="navbar navbar-light bg-light">
        <div class="container-fluid px-4">
            <a class="navbar-brand" href="/"><img src="/assets/img/EllaRises.png" alt="Ella Rises Logo"
                    style="height: 60px;"></a>
            <div>
                <% if (user) { %>
                    <span class="navbar-text me-3">Hi, <%= user.username %></span>
                    <a class="btn btn-no-background" href="/logout">Logout</a>
                <% } else { %>
                    <a class="btn btn-no-background" href="/login">Login</a>
                <% } %>
            </div>
        </div>
    </nav>
    <!-- Header-->
    <header class="bg-primary py-2 position-relative">
        <a href="/" class="back-arrow-link position-absolute"><i class="bi bi-chevron-left"></i></a>
        <div class="container px-4 px-lg-5 my-5">
            <div class="text-center">
                <h1 class="display-4 fw-bolder">Donations</h1>
                <p class="lead fw-normal mb-0">Manage your donations</p>
            </div>
        </div>
    </header>
    <!-- Section-->
    <section class="py-5">
        <div class="container px-4 px-lg-5 mt-5">
            <% if (user && user.role === 'manager') { %>
            <div class="d-flex justify-content-end mb-3">
                <a class="btn btn-custom-view" href="/donations/add">Add New Donation</a>
            </div>
            <% } %>
            <div class="table-responsive-scroll">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Donor Name</th>
                            <th>Amount</th>
                            <th>Donation Date</th>
                            <% if (user && user.role === 'manager') { %>
                            <th>Actions</th>
                            <% } %>
                        </tr>
                    </thead>
                    <tbody>
                        <% donations.forEach(function(donation) { %>
                            <tr>
                                <td>
                                    <%= donation.donor_name %>
                                </td>
                                <td>
                                    <%= donation.amount %>
                                </td>
                                <td>
                                    <%= donation.donation_date %>
                                </td>
                                <% if (user && user.role === 'manager') { %>
                                <td class="text-center">
                                    <a class="me-2" href="/donations/edit/<%= donation.id %>"><i
                                            class="bi-pencil text-secondary"></i></a>
                                    <a href="/donations/delete/<%= donation.id %>"><i
                                            class="bi-trash text-danger"></i></a>
                                </td>
                                <% } %>
                            </tr>
                            <% }); %>
                    </tbody>
                </table>
            </div>